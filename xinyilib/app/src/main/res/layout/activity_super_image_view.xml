<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.xinyi_tech.freedom.pick.SuperImageViewActivity">

    <ImageView
        android:id="@+id/circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/test"/>

    <com.xinyi_tech.comm.widget.picker.SuperImageView
        android:id="@+id/simg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:sImgFrameColor="@color/comm_amber"
        app:sImgConverType="SMART_FACE"
        app:sImgLookMode="false"
        app:sImgSupporCrop="true"
        app:sImgFrameWidth="10dp"
        app:sImgImageHolder="@mipmap/test"
        app:sImgShape="roundness"/>


</LinearLayout>
