<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/comm_white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:visibility="gone">

    <!--  android:background="@android:color/transparent"-->
    <LinearLayout
        android:id="@+id/search_top_bar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="5dp">

        <LinearLayout
            android:id="@+id/ll_seacher_edit"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="#11000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp">


            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/icon_seacher" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_seacher"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入镜头编号或者名称"
                android:imeOptions="actionSearch"
                android:inputType="textNoSuggestions"
                android:minHeight="24dp"
                android:paddingLeft="5dp"
                android:textColor="@color/comm_white"
                android:textColorHint="@color/comm_white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_action_navigation_close"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/comm_black"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_suggest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/comm_search_layover_bg" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>


</LinearLayout>