<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="48dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_field_name"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:textColor="@color/comm_grey900"
            android:textSize="16sp"
            tools:text="姓名" />

        <LinearLayout
            android:id="@+id/root_ll_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:orientation="horizontal"></LinearLayout>

            <View
                android:id="@+id/line_value"
                style="@style/comm_line_style_no_margin" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_must"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_red_star" />
    </LinearLayout>

    <View
        android:id="@+id/line_field"
        style="@style/comm_line_style_no_margin" />
</LinearLayout>