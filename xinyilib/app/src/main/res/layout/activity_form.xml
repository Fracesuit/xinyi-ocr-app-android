                    android:gravity="center_vertical"
                    android:text="各种view"/>

                <com.xinyi_tech.comm.form.FieldView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:comm_contentType="TYPE_EDITTEXT"
                    app:comm_edittext_hint="请输入"
                    app:comm_field_name="xinbie"
                    app:comm_label_name="EditView"
                    app:comm_must="true"
                    app:comm_warnMessager="EditView"/>

                <com.xinyi_tech.comm.form.FieldView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:comm_contentType="TYPE_TEXTVIEW"
                    app:comm_edittext_hint="请选择"
                    app:comm_field_name="xinbie"
                    app:comm_label_name="TextView"
                    app:comm_init_content="ddd"
                    app:comm_must="true"
                    app:comm_textIcon="@mipmap/ic_launcher_round"
                    app:comm_warnMessager="TextView"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

