                        android:layout_height="wrap_content"
                        app:comm_contentType="TYPE_RADIOGROUP"
                        app:comm_field_name="sex1"
                        app:comm_label_name="性别(动态设置):"
                        app:comm_must="false"/>
                </LinearLayout>

                <com.xinyi_tech.comm.form.FieldView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:comm_contentType="TYPE_SPINNER"
                    app:comm_field_name="sex"
                    app:comm_init_content="男_1,女_2,未知_3"
                    app:comm_label_name="性        别:"
                    app:comm_must="true"/>


