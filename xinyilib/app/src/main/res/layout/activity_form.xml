                    android:layout_height="wrap_content"
                    android:background="@color/comm_grey"
                    android:gravity="center_vertical"
                    android:text="自定义view"/>

                <com.xinyi_tech.comm.form.FieldView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:comm_dividedColor="@color/comm_orange"
                    app:comm_fieldViewBgColor="@color/comm_red"
