                    app:comm_label_name="自  定  义:"
                    app:comm_must="false"
                    app:comm_valueBgColor="@color/comm_amber">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11111"/>
                </com.xinyi_tech.comm.form.FieldView>

                <com.xinyi_tech.comm.form.FieldView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:comm_dataBgColor="@color/comm_red"
                    app:comm_edittext_line="5"
                    app:comm_field_name="sg"
                    app:comm_init_content="ffff"
                    app:comm_label_name="身高(cm):"
                    app:comm_must="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入身高"
                        android:inputType="numberDecimal"/>
                </com.xinyi_tech.comm.form.FieldView>

                <com.xinyi_tech.comm.form.FieldView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:comm_dataBgColor="@color/comm_yellow"
                    app:comm_field_name="pole.fxjzvalue,pole.fxjzvalue1,pole.fxjzvalue2"
                    app:comm_init_content="ffff"
                    app:comm_contentType="TYPE_MUTIVIEW"
                    app:comm_label_name="方型基站:"
                    app:comm_must_for_mutiview="0,1,1"
                    app:comm_must="false"
                    app:comm_valueBgColor="@color/comm_green">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/comm_red"
                        android:orientation="horizontal">

                        <EditText
                            style="@style/style_gan_jz"
                            android:hint="数量"
                            android:inputType="number"/>


                        <EditText
                            style="@style/style_gan_jz"
                            android:hint="功率"/>


                        <EditText
                            style="@style/style_gan_jz"
                            android:hint="型号"/>
                    </LinearLayout>
                </com.xinyi_tech.comm.form.FieldView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/comm_grey"
                    android:gravity="center_vertical"
                    android:text="摆放位置和分割线"/>


                <com.xinyi_tech.comm.form.FieldView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:comm_dividedColor="@color/comm_orange"
                    app:comm_fieldDivided="true"
                    app:comm_field_name="zdy1"
                    app:comm_formDivided="false"
                    app:comm_init_content="hhhhhhhhhhhh"
                    app:comm_labelWithMustIcon="true"
                    app:comm_label_name="自  定  义1:"
                    app:comm_must="true"
                    app:comm_valueTextSize="18sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.xinyi_tech.comm.form.FieldView>


                <com.xinyi_tech.comm.form.FieldView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:comm_contentType="TYPE_SPINNER"
                    app:comm_dividedColor="@color/comm_red"
                    app:comm_fieldDivided="false"
                    app:comm_field_name="sex"
                    app:comm_formDivided="true"
                    app:comm_formHorizontal="false"
                    app:comm_init_content="男_1,女_2,未知_3"
                    app:comm_label_name="性别:在上面"
                    app:comm_must="true"/>-->

                <TextView
                    android:layout_width="match_parent"
