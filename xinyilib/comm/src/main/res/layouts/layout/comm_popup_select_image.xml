<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/comm_popup_bg">

        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/comm_grey200"
            android:orientation="vertical">
            <!-- <style name="comm_textview_select_image">
                 <item name="android:layout_width">match_parent</item>
                 <item name="android:background">@drawable/comm_selector_item</item>
                 <item name="android:layout_height">wrap_content</item>
                 <item name="android:gravity">center</item>
                 <item name="android:padding">20dp</item>
             </style>-->
            <com.allen.library.SuperTextView
                android:id="@+id/tv_camera"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:sCenterTextColor="@color/comm_grey700"
                app:sCenterTextSize="12sp"
                app:sCenterTextString="拍照" />

            <com.allen.library.SuperTextView
                android:id="@+id/tv_gallery"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:sCenterTextColor="@color/comm_grey700"
                app:sCenterTextSize="12sp"
                app:sCenterTextString="相册" />

            <com.allen.library.SuperTextView
                android:id="@+id/tv_attachment"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:sCenterTextColor="@color/comm_grey700"
                app:sCenterTextSize="12sp"
                app:sCenterTextString="附件" />

            <com.allen.library.SuperTextView
                android:id="@+id/tv_video"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:sCenterTextColor="@color/comm_grey700"
                app:sCenterTextSize="12sp"
                app:sCenterTextString="视频" />

            <com.allen.library.SuperTextView
                android:id="@+id/tv_audio"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:sCenterTextColor="@color/comm_grey700"
                app:sCenterTextSize="12sp"
                app:sCenterTextString="音频" />

            <com.allen.library.SuperTextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                app:sCenterTextColor="@color/comm_grey700"
                app:sCenterTextSize="12sp"
                app:sCenterTextString="取消" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>